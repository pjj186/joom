doctype html
html(lang="en")
    head
        meta(charset="UTF-8")
        meta(http-equiv="X-UA-Compatible", content="IE=edge")
        meta(name="viewport", content="width=device-width, initial-scale=1.0")
        title Joom
        link(rel="stylesheet", href="/public/css/styles.css")
    body 
        div#bg
            div#container
                header
                    h1 Joom
                main
                    div#welcome
                        form
                            input(placeholder="room name", required, type="text")
                            button Enter
                    div#call
                        div#myStream
                            span#title
                            div#videoContainer
                                div
                                    p You
                                    video#myFace(autoplay, playsinline, width="400", height="300")
                                div
                                    p Friend
                                    video#peerFace(autoplay, playsinline, width="400", height="300")
                            div#videoOptions
                                button#mute Mute
                                button#camera Turn Camera
                                select#cameras
                            div#chat
                                div#messages
                                    ul
                                div#chatInput
                                    form
                                        input(placeholder="message", required, type="text")
                                        button Send

        script(src="/socket.io/socket.io.js")    
        script(src="/public/js/app.js")